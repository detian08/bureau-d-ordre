<?xml version="1.0"?>
<openerp>
    <data>   
        <!--
		added by Marwa BM 15-08-2017
		Form Opérateur 
	-->
        <record id="view_partner_operator_form" model="ir.ui.view">
            <field name="name">operateur</field>
            <field name="model">res.partner.request</field>
            <field name="priority" eval="4"/>
            <field name="arch" type="xml">
                <form string="Opérateur économique">
                    <header>
                        <button string="À valider" name="a_valider_bt" states="draft, to_validate" type="workflow" class="oe_highlight"/>
                        <button string="Valider" name="valider_bt" states="to_validate" type="workflow" class="oe_highlight" groups="base.group_no_one"/>
                        <button string="Annuler" name="reject_bt" states="to_validate" type="workflow" class="oe_highlight" groups="base.group_no_one"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,to_validate,validate,update,reject"/>
                    </header>
                    <sheet>
                <!--field name="image" widget='image' class="oe_left oe_avatar" options='{"preview_image": "image_medium", "size": [90, 90]}'/-->
                        <div class="oe_title oe_left">
                            <div class="oe_edit_only">
                                <label for="name"/>
                                (
                                <field name="is_company" on_change="onchange_type(is_company)" class="oe_inline" attrs="{'readonly': [ ('state', 'in', ['to_validate','validate','reject'])]}"/>
                                <label for="is_company" string="Est une société ?" default_is_company="True"/>
                                )
                            </div>

                            <h1>
                                <field name="name" default_focus="1" placeholder="Nom" string="Nom" attrs="{'readonly': [ ('state', 'in', ['to_validate','validate','reject'])]}"/>
                            </h1>

                            <field name="category_id" widget="many2many_tags" placeholder="Secteurs d'activité..." attrs="{'readonly': [ ('state', 'in', ['to_validate','validate','reject'])]}"/>
                        </div>

                        <group>
                            <group>
                                <label for="street" string="Addresse" attrs="{'readonly': [ ('state', 'in', ['to_validate','validate','reject'])]}"/>
                                <div>
                                    <field name="street" placeholder="Rue..." attrs="{'readonly': [ ('state', 'in', ['to_validate','validate','reject'])]}"/>
                                    <field name="street2" attrs="{'readonly': [ ('state', 'in', ['to_validate','validate','reject'])]}"/>
                                    <div class="address_format" attrs="{'readonly': [ ('state', 'in', ['to_validate','validate','reject'])]}">
                                        <field name="city" placeholder="Ville" style="width: 40%%" attrs="{'readonly': [ ('state', 'in', ['to_validate','validate','reject'])]}"/>
                                        <!--field name="state_id" class="oe_no_button" placeholder="State" style="width: 37%%"/-->
                                        <field name="zip" placeholder="Code postale" style="width: 40%%" attrs="{'readonly': [ ('state', 'in', ['to_validate','validate','reject'])]}"/>
                                    </div>
                                    <field name="country_id" placeholder="Pays" class="oe_no_button" options='{"no_open": True, "no_create": True}' attrs="{'readonly': [ ('state', 'in', ['to_validate','validate','reject'])]}"/>
                                </div>
                                <field name="website" widget="url" placeholder="ex: www.odoo.com" string="Site Web" attrs="{'readonly': [ ('state', 'in', ['to_validate','validate','reject'])]}"/>
                            </group>
                            <group>
                                <field name="phone" attrs="{'readonly': [ ('state', 'in', ['to_validate','validate','reject'])]}"/>
                                <field name="mobile" attrs="{'readonly': [ ('state', 'in', ['to_validate','validate','reject'])]}"/>
                                <field name="fax" attrs="{'readonly': [ ('state', 'in', ['to_validate','validate','reject'])]}"/>
                                <field name="user_ids" invisible="1" attrs="{'readonly': [ ('state', 'in', ['to_validate','validate','reject'])]}"/>
                                <field name="email" widget="email" attrs="{'readonly': [ ('state', 'in', ['to_validate','validate','reject'])]}"/>
                                <field name="title" options='{"no_open": True}' string="Civilité" attrs="{'readonly': [ ('state', 'in', ['to_validate','validate','reject'])]}"/>
                            </group>
                            <group>
                                <field name="matricule_fiscale" attrs="{'readonly': [ ('state', 'in', ['to_validate','validate','reject'])]}"/>



                                <field name="code_tva" attrs="{'readonly': [ ('state', 'in', ['to_validate','to_validate','validate','reject'])]}"/>
                            </group>
                        </group>
<!--le champ motif de refus n'est que si state est ref attrs="{'invisible': [('state', '!=', 'reject')]}" -->
<notebook>
    			<page string="Note">
			       
	<field name='note' />



</page>
</notebook>
                    </sheet>
                </form>
            </field>
        </record>

